    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/premiumButton"
        app:layout_constraintWidth_percent="0.75">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.3"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonCaption"
                android:layout_width="match_parent"
                android:onClick="captionClick"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/b_caption" />

            <ImageView
                android:id="@+id/buttonQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/b_book" />

            <ImageView
                android:id="@+id/buttonSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/b_search" />

            <ImageView
                android:id="@+id/buttonTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:onClick="TVClick"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/b_tv" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="key1Click"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/b_1" />

            <ImageView
                android:id="@+id/buttonTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:onClick="key2Click"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/b_2" />

            <ImageView
                android:id="@+id/buttonThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="key3Click"
                android:foreground="@drawable/ripple_effect"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/b_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="key4Click"
                android:foreground="@drawable/ripple_effect"
                app:srcCompat="@drawable/b_4" />

            <ImageView
                android:id="@+id/buttonFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:onClick="key5Click"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                app:srcCompat="@drawable/b_5" />

            <ImageView
                android:id="@+id/buttonSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:onClick="key6Click"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                app:srcCompat="@drawable/b_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonSeven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:onClick="key7Click"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                app:srcCompat="@drawable/b_7" />

            <ImageView
                android:id="@+id/buttonEight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:onClick="key8Click"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                app:srcCompat="@drawable/b_8" />

            <ImageView
                android:id="@+id/buttonNine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="key9Click"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                app:srcCompat="@drawable/b_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1.16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="keyListClick"
                android:foreground="@drawable/ripple_effect"
                app:srcCompat="@drawable/b_list" />

            <ImageView
                android:id="@+id/buttonZero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="key0Click"
                android:foreground="@drawable/ripple_effect"
                app:srcCompat="@drawable/b_0" />

            <ImageView
                android:id="@+id/buttonFlashbk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect"
                app:srcCompat="@drawable/b_flashback" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_vertical_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buttonVolPlus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:foreground="@drawable/ripple_effect"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/b_vertical_plus_not_active" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/text_vol" />

                <ImageView
                    android:id="@+id/buttonVolMinus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:clickable="true"
                    android:foreground="@drawable/ripple_effect"
                    app:srcCompat="@drawable/b_vertical_minus_not_active" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buttonFav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="@drawable/ripple_effect"
                    app:srcCompat="@drawable/b_fav" />

                <ImageView
                    android:id="@+id/buttonMute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="@drawable/ripple_effect"
                    app:srcCompat="@drawable/b_mute" />

                <ImageView
                    android:id="@+id/buttonInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:onClick="keyInfoClick"
                    android:clickable="true"
                    android:foreground="@drawable/ripple_effect"
                    app:srcCompat="@drawable/b_info" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_vertical_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buttonChPlus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:clickable="true"
                    android:foreground="@drawable/ripple_effect"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/b_vertical_plus_not_active" />

                <ImageView
                    android:id="@+id/imageView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/text_ch" />

                <ImageView
                    android:id="@+id/buttonChMinus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:clickable="true"
                    android:foreground="@drawable/ripple_effect"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/b_vertical_minus_not_active" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>